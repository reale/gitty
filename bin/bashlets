#
# global variables
################################################################################

BASHLETS_BASE=~
BASHLETS_NAME=bashlets
BASHLETS_BASE=~/.bashlets
BASHLETS_LOADER_2ND_STAGE="$BASHLETS_BASE/core/base/${BASHLETS_REV:-DEFAULT}/bin/bashlets-import"
BASHLETS_ERRORS_LOADING_ERROR=1



#
# utilities
################################################################################

function usage()
{
    cat <<-EOF
		Usage:

		    bashlets < command > [ arguments ]

	EOF
} 

function version()
{
    cat <<-EOF
		bashlets 0.1
	EOF
} 

function cleanup()
{
    :
}

trap cleanup EXIT


#
# core logic
################################################################################

# check if we are being sourced
if [[ "${BASH_SOURCE[0]}" != "$0" ]]
then
    # load second stage
    [[ -r "$BASHLETS_LOADER_2ND_STAGE" ]] || {
        echo "[$BASHLETS_NAME] Second-stage loader not found!" >&2
        return $BASHLETS_ERRORS_LOADING_ERROR
    }
    source "$BASHLETS_LOADER_2ND_STAGE" "$@"
else
    # parse command line options
    [[ $# -gt 0 ]] || {
        echo ; usage
        exit 1
    }

    command=$1
    shift 1

    # execute command
    bashlets-$command "$@"
fi


# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
