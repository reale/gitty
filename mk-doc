function method_description()
{
    local module="$1" method="$2"
    [[ -e $module && -n $method ]] || return

    awk "
        BEGIN {
            STATE = \"none\"
            bufferlen = 0
        }

        /^#[[:blank:]]*$/ {
            STATE = \"comment\"
            next
        }

        /^#/ {
            if (STATE == \"none\") {
                STATE = \"description\"
                sub(/^#[[:blank:]]*/, \"\")
                buffer[bufferlen++] = \$0
            } else {
                STATE = \"comment\"
            }
            next
        }

        /^function [A-Za-z0-9_:]+::$method()/ { 
            STATE = \"signature\"
            for (i in buffer)
                print buffer[i]
            STATE = \"none\"
            next
        }

        {
            delete buffer
            bufferlen = 0
            STATE = \"none\"
            next
        }

        END {
        }
    " "$module"
}

function method_description_md()
{
    local module="$1" method="$2"
    [[ -e $module && -n $method ]] || return

    method_description "$module" "$method"
}

function module_methods()
{
    local module="$1"
    [[ -e $module ]] || return

    grep -A 1 '^#\+ *@public' "$module"                                \
        | sed -n 's/function \([A-Za-z0-9_:]\+\)::\([^:]\+\)()/\2/p'  \
        | sort
}

function module_methods_md()
{
    local module="$1"
    local name="$(basename "$module")"
    [[ -e $module ]] || return

    module_methods "$module" \
        | xargs -n 1 -I % echo "* [\`${name}::%\`](#${name}%)"
}

function module_methods_description_md()
{
    local module="$1"
    local name="$(basename "$module")"
    [[ -e $module ]] || return

    for method in $(module_methods "$module")
    do
        cat <<EOF
### \`$name::$method\`

$(method_description_md "$module" "$method")

EOF
    done
}

function modules()
{
    local base="$1"
    [[ -e $base ]] || return

    find "$base" -type f -printf "%f\n" | sort
}

function modules_md()
{
    local base="$1" module
    [[ -e $base ]] || return

    for module in $(modules "$base")
    do
        cat <<EOF
### \`$module\`

$(module_methods_md "$base/$module")

EOF
    done
}

function modules_descriptions_md()
{
    local base="$1" module
    [[ -e $base ]] || return

    for module in $(modules "$base")
    do
        module_methods_description_md "$base/$module"
    done
}

function toc_md()
{
    local base="$1"
    [[ -e $base ]] || return

    cat <<EOF
## API Reference

$(modules_md "$base")

EOF
}

function descriptions_md()
{
    local base="$1"
    [[ -e $base ]] || return

    cat <<EOF
## Methods Description

$(modules_descriptions_md "$base")

EOF
}

function generate_md()
{
    local base="$1"
    [[ -e $base ]] || return

    toc_md "$base"
    descriptions_md "$base"
}


generate_md $1

# Local variables:
